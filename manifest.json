{
  "manifest_version": 3,
  "name": "Cropper with Popup Window",
  "version": "1.0",
  "description": "Capture a screenshot and crop it using Cropper.js.",
  "permissions": ["storage", "activeTab", "scripting", "tabs", "windows"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["cropper.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
